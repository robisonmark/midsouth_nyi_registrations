# Database Configuration
POSTGRES_DB=robros_journal_db
POSTGRES_USER=robros_user
POSTGRES_PASSWORD=robros_password
POSTGRES_PORT=5432

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# Connection String
CONNECTION_STRING=Host=postgres;Database=robros_journal_db;Username=robros_user;Password=robros_password

# Journal Service Configuration
JOURNAL_CHANNEL_CAPACITY=1000

# Docker Configuration
DOCKER_IMAGE_TAG=latest

# NuGet Configuration (for publishing)
NUGET_API_KEY=your-nuget-api-key-here

# Docker Hub Configuration (for publishing)
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password