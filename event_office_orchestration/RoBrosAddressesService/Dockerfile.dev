# Dev container: Use full SDK
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS dev

WORKDIR /app

# Copy csproj and restore separately for caching
COPY *.csproj ./
RUN dotnet restore

# Copy everything
COPY . ./

# Expose the dev port
EXPOSE 8080

# Run with hot reload
ENTRYPOINT ["dotnet", "watch", "run", "--urls", "http://0.0.0.0:8080"]
